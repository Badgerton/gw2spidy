{% extends "content_wide.html.twig" %}

{% block htmltitle %}{{ parent() }} | Login{% endblock %}
{% block content %}

<div class="row-fluid">
    <div class="span6">
        <h1>Account Login</h1>
        <form class="form" action="{{ path('login_check') }}" method="post">
            {{ error }}
            <div class="control-group">
                <label class="control-label" for=""loginUsername">Username</label>
                <div class="controls">
                    <input type="text" id="loginUsername" name="_username" value="{{ last_username }}" />
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="loginPassword">Password</label>
                <div class="controls">
                    <input type="password" id="loginPassword" name="_password" value="" />
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary">Login</button> <br />
                    Don't have an account yet? <a href="{{ path('register') }}">Register one now</a>
                </div>
            </div>
        </form>
    </div>
    <div class="span6 social_login">
        <h1>Social Login</h1>
        <a href="{{ path('social_login', {'provider': 'facebook'}) }}" class="btn btn-large">
            <i class="icon-facebook"></i><span>Facebook</psan>
        </a><br />
        <a href="{{ path('social_login', {'provider': 'twitter'}) }}" class="btn btn-large">
            <i class="icon-twitter"></i><span>Twitter</span>
        </a><br />
        <a href="{{ path('social_login', {'provider': 'google'}) }}" class="btn btn-large">
            <i class="icon-google-plus"></i><span>Google+</span>
        </a><br />
        <a href="{{ path('social_login', {'provider': 'github'}) }}" class="btn btn-large">
            <i class="icon-github"></i><span>Github</span>
        </a><br />
    </div>
</div>

{% endblock %}