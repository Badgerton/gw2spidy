{% extends "content_wide.html.twig" %}

{% block content %}
<pre class="dump">{{ dump }}</pre>

<script type="text/javascript">
var updateStatus = function() {
    setTimeout(function() {
        $.ajax('/status', {
            success: function(resp) {
                $('pre.dump').html($(resp).find('pre.dump').html());

                updateStatus();
             }
        });
    }, 5000);
};

updateStatus();
</script>
{% endblock content %}