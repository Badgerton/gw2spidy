{% extends "content_sidebar.html.twig" %}

{% block content %}

<script type="text/javascript" src="{{ versioned_asset('/assets/js/crafting.js') }}"></script>

<style>
    .recipe-wrapper {}

    .recipe-row {
    }

    .recipe-row label {
        display: inline-block;
    }

    .recipe-row .item-row {
        border: 1px solid black;
        -webkit-border-radius: 3px;
           -moz-border-radius: 3px;
                border-radius: 3px;

        margin-bottom: 5px;
        padding: 1px;
        height: 24px;
        width: 490px;
        float: left;
    }

    .recipe-row .item {
        float: left;
        height: 24px;
        width: 200px;
        font-weight: bold;
    }

    .recipe-row .options {
        float: right;
        height: 24px;
    }

    .recipe-row .options > span {
        display: inline-block;
        padding: 3px 10px 2px;
        width: 120px;
        height: 19px;
        margin-left: 3px;
    }

    .recipe-row .options span label {
        font-weight: bold;
    }
    .recipe-row .options span input {
        position: relative;
        top: -1px;
    }

    .recipe-row .children {
        padding-left: 40px;
    }

    .label-not-craftable {
        width: 264px !important;
        opacity: 0.8;
    }

    .children-disabled {
        opacity: 0.5;
    }
</style>

<h1>Crafting "Gun"</h1>
<div id="recipe_container" class="well recipe-wrapper clearfix"></div>
<h2 style="border-bottom: 1px solid black;">Summary</h2>
<div class="well clearfix">
    <table class="table table-striped table-condensed">
    	<thead>
    		<tr>
    			<th>#</th>
    			<th>Ingredient</th>
    			<th>ea</th>
    			<th>total</th>
    		</tr>
    	</thead>
    	<tbody id="recipe_summary">

    	</tbody>
    	<tfoot>
    		<tr>
    			<td colspan="3"></td>
    			<td id="recipe_summary_total"></td>
    		</tr>
    	</tfoot>
    </table>
</div>
{% endblock %}
